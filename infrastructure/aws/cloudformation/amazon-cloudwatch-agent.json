{
    "agent": {
        "metrics_collection_interval": 60,
        "region": "us-east-1",
        "logfile": "/var/logs/amazon-cloudwatch-agent.log"
    },
    "metrics": {
        "metrics_collected": {
            "cpu": {
                "resources": [
                    "*"
                ],
                "measurement": [
                    "time_active",
                    "time_user",
                    "usage_idle"
                ],
                "metrics_collection_interval": 10
            },
            "netstat": {
                "measurement": [
                    "tcp_established",
                    "tcp_syn_sent",
                    "tcp_close"
                ],
                "metrics_collection_interval": 60
            },
            "processes": {
                "measurement": [
                    "running",
                    "sleeping",
                    "dead"
                ]
            },
            "mem": {
                "measurement": [
                    "active",
                    "available",
                    "free",
                    "total"
                ]
            },
            "statsd": {
                "service_address": ":8125",
                "metrics_collection_interval": 60,
                "metrics_aggregation_interval": 300
            }
        }
    },
    "logs": {
        "logs_collected": {
            "files": {
                "collect_list": [
                    {
                        "file_path": "/opt/tomcat/logs/csye6225.log",
                        "log_group_name": "csye6225_fall2018",
                        "log_stream_name": "webapi"
                    }
                ]
            }
        },
        "log_stream_name": "cloudwatch_log_stream"
    }
}